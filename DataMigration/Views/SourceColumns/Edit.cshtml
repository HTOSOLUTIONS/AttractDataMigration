@model SourceColumnViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="hto-pgtitle">Edit</div>

<crud-links record-controls="@Model.RowCtrls" last-action="@ActionHistory.GetLastHistoryItem(ViewContext.HttpContext)" class="crudctrls"></crud-links>

<div class="hto-rtitle">Source Column</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TableSchema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableSchema)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TableName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ColumnName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ColumnName)
        </dd>
    </dl>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TableSchema" />
            <input type="hidden" asp-for="TableName" />
            <input type="hidden" asp-for="ColumnName" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="NeedsMigration" class="control-label"></label>
                            <booleanyesnonull asp-for="NeedsMigration" current-value="@Model.NeedsMigration"></booleanyesnonull>
                            <span asp-validation-for="NeedsMigration" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DestinationTable" class="control-label"></label>
                            <input asp-for="DestinationTable" class="form-control" />
                            <span asp-validation-for="DestinationTable" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DestinationColumn" class="control-label"></label>
                            <input asp-for="DestinationColumn" class="form-control" />
                            <span asp-validation-for="DestinationColumn" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="NeedsFollowUp" class="control-label"></label>
                            <booleanyesnonull asp-for="NeedsFollowUp" current-value="@Model.NeedsFollowUp"></booleanyesnonull>
                            <span asp-validation-for="NeedsFollowUp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Notes" class="control-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>




        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
