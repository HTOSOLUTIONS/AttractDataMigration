@model TargetDDContext.Models.Table

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Target Table</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TableSchema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableSchema)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TableName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableName)
        </dd>
    </dl>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TableSchema" />
            <input type="hidden" asp-for="TableName" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NeedsMigration" class="control-label"></label>
                <input asp-for="NeedsMigration" class="form-control" />
                <span asp-validation-for="NeedsMigration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
