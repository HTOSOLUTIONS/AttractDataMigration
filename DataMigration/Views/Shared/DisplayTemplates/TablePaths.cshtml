@model string

@{

    var displayString = "";
    if (!string.IsNullOrEmpty(Model))
    {

        string connector = "<span class='glyphicons glyphicons-arrow-right joiner'></span>";

        var links = new List<string>();
        var pathparts = Model.Split("~");
        @foreach (var part in pathparts)
        {
            links.Add("<a href=javascript:void(0) class='pathpart'>" + part + "</a>");
        }
        if (links.Count > 0)
        {
            displayString = string.Join(connector, links);

        }

    }


}

@Html.Raw(displayString)


