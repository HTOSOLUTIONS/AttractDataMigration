@{
    var pageNumber = Html.ViewContext.HttpContext.Request.Query.FirstOrDefault(k => k.Key.ToLower() == "page").Value ;
}

<div class="htx-ilist-header container-fluid">
    <div class="row">
        <div class="htx-ilist-title col-md-6">
            <span class="glyphicons @ViewData["Icon"]"></span>@ViewData["Title"]
            <span class="htx-ilist-recordcount">
                <span class="badge"></span>
            </span>
            <span class="htx-ilist-totalamount">
                <span class="badge"></span>
            </span>
            <i id="htoajaxloadspinner" class="fa fa-spinner fa-spin fa-3x" style="font-size:20px;"></i>
            <span class="htx-ilist-pagenumber" data-pagenumber="@Html.Raw(pageNumber)">
            </span>

        </div>
        <div class="htx-ilist-header-right col-md-6">
        </div>
    </div>

</div>
