@model DataMigration.ModelFilters.TargetColumnsFilter

<form asp-action="@ViewData["listaction"]" id="filterForm" class="form-horizontal" data-ajax="true" data-ajax-method="post" data-ajax-update="#htxAjaxList" data-ajax-success="movePagers">

    @await Html.PartialAsync("_htx_filters_div_r")

    <div id="list_filters" class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                </div>
                <div class="form-group">
                    <label class="control-label" for="TableSchema">Table:</label>
                    <div>
                        <input asp-for="TableSchema" type="text" value="@ViewBag.TableSchema" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="TableName">Table:</label>
                    <div>
                        <input asp-for="TableName" type="text" value="@ViewBag.TableName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="ColumnName">Column:</label>
                    <div>
                        <input asp-for="ColumnName" type="text" value="@ViewBag.ColumnName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="Symbol">Non-Tenant Schemas:</label>
                    <div>
                        <booleanyesnonull asp-for="xNonProductionData" current-value="@ViewBag.xNonProductionData"></booleanyesnonull>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="PrimaryKeys">Primary Keys:</label>
                    <div>
                        <booleanyesnonull asp-for="PrimaryKeys" current-value="@ViewBag.PrimaryKeys"></booleanyesnonull>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="ForeignKeys">Foreign Keys:</label>
                    <div>
                        <booleanyesnonull asp-for="ForeignKeys" current-value="@ViewBag.ForeignKeys"></booleanyesnonull>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="CreateModifyTrackers">Create Modify Trackers:</label>
                    <div>
                        <booleanyesnonull asp-for="CreateModifyTrackers" current-value="@ViewBag.CreateModifyTrackers"></booleanyesnonull>
                    </div>
                </div>

                <input type="hidden" name="fromForm" id="fromForm" value="true" />

            </div>
        </div>
    </div>

</form>

